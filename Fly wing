-- إعدادات الواجهة
local screen = game.Players.LocalPlayer:WaitForChild("PlayerGui")
local gui = Instance.new("ScreenGui", screen)
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 180)  -- تصغير حجم الواجهة
frame.Position = UDim2.new(0.5, -110, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 139)  -- اللون الأزرق النيلي
frame.BorderSizePixel = 2
frame.BorderColor3 = Color3.fromRGB(0, 0, 0)

-- أزرار التحكم
local flyButton = Instance.new("TextButton", frame)
flyButton.Size = UDim2.new(0, 200, 0, 30)
flyButton.Position = UDim2.new(0, 10, 0, 10)
flyButton.Text = "تحليق"
flyButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)
flyButton.TextColor3 = Color3.fromRGB(255, 255, 255)

local speedButton = Instance.new("TextButton", frame)
speedButton.Size = UDim2.new(0, 200, 0, 30)
speedButton.Position = UDim2.new(0, 10, 0, 50)
speedButton.Text = "سرعة الطيران"
speedButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)
speedButton.TextColor3 = Color3.fromRGB(255, 255, 255)

local toggleButton = Instance.new("TextButton", frame)
toggleButton.Size = UDim2.new(0, 200, 0, 30)
toggleButton.Position = UDim2.new(0, 10, 0, 90)
toggleButton.Text = "تشغيل/إيقاف"
toggleButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)
toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)

local closeButton = Instance.new("TextButton", frame)
closeButton.Size = UDim2.new(0, 200, 0, 30)
closeButton.Position = UDim2.new(0, 10, 0, 130)
closeButton.Text = "إغلاق الواجهة"
closeButton.BackgroundColor3 = Color3.fromRGB(139, 0, 0)
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)

-- متغيرات الطيران
local flying = false
local speed = 0
local bodyVelocity

-- تحكم في الطيران
flyButton.MouseButton1Click:Connect(function()
    flying = not flying
    if flying then
        flyButton.Text = "إيقاف التحليق"
        -- إضافة كود الطيران
        local character = game.Players.LocalPlayer.Character
        if character then
            local humanoid = character:WaitForChild("Humanoid")
            local bodyGyro = Instance.new("BodyGyro", character.HumanoidRootPart)
            local bodyVelocity = Instance.new("BodyVelocity", character.HumanoidRootPart)
            bodyGyro.MaxTorque = Vector3.new(400000, 400000, 400000)
            bodyGyro.CFrame = character.HumanoidRootPart.CFrame
            bodyVelocity.MaxForce = Vector3.new(400000, 400000, 400000)
            bodyVelocity.Velocity = Vector3.new(0, speed, 0)  -- تعديل السرعة للطيران
        end
    else
        flyButton.Text = "تحليق"
        -- إضافة كود إيقاف الطيران
        local character = game.Players.LocalPlayer.Character
        if character then
            local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
            local bodyGyro = humanoidRootPart:FindFirstChildOfClass("BodyGyro")
            local bodyVelocity = humanoidRootPart:FindFirstChildOfClass("BodyVelocity")
            if bodyGyro then bodyGyro:Destroy() end
            if bodyVelocity then bodyVelocity:Destroy() end
        end
    end
end)

-- تحديد السرعة
speedButton.MouseButton1Click:Connect(function()
    local userInput = game:GetService("UserInputService"):InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Keyboard then
            local speedInput = tonumber(input.KeyCode.Name)
            if speedInput then
                speed = speedInput
                speedButton.Text = "سرعة: " .. speed
            end
        end
    end)
end)

-- تغيير حالة التشغيل
toggleButton.MouseButton1Click:Connect(function()
    if flying then
        -- تشغيل الطيران
    else
        -- إيقاف الطيران
    end
end)

-- إغلاق الواجهة
closeButton.MouseButton1Click:Connect(function()
    gui:Destroy()
end) 
